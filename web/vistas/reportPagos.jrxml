	<queryString language="SQL">
		<![CDATA[SELECT 
    ct.idContrato,
    c.nombre AS NombreCliente,
    c.apellido AS ApellidoCliente,
    p.nombrePlan AS Planes,
    p.precio AS TotalPlan,
    COALESCE(SUM(cp.monto), 0) AS MontoPagado,
    CASE
        WHEN COALESCE(SUM(cp.monto), 0) >= p.precio THEN 'Finalizado'
        ELSE 'En Proceso'
    END AS Estado
FROM 
    contratos ct
JOIN 
    clientes c ON ct.idCliente = c.idCliente
JOIN 
    planes p ON ct.idPlan = p.idPlan
LEFT JOIN 
    cuotaPagos cp ON ct.idContrato = cp.idContrato
GROUP BY 
    ct.idContrato, c.nombre, c.apellido, p.nombrePlan, p.precio;]]>
	</queryString>
